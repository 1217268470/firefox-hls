{
  "manifest_version": 2,
  "name": "hls",
  "description": "hls",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": [
    "webRequest",
	"webRequestBlocking",
    "<all_urls>",
	"nativeMessaging",
	"downloads",
	"geolocation",
	"geolocation",
	"notifications",
	"tabs",
	"activeTab",
	"nativeMessaging",
	"browsingData",
	"history"
  ],
  "background": {
	"scripts": ["request_scripts.js","notifications.js"]
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
	"browser_style": true,
    "default_popup": "popup/popup.html",
	"default_title": "HLS"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]

}


