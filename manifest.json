{
  "manifest_version": 2,
  "name": "HLS",
  "description": "HLS",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
    "applications": {
    "gecko": {
      "id": "hls@hls.org",
      "strict_min_version": "50.0"
    }
  },
  "permissions": [
    "webRequest",
	"webRequestBlocking",
    "<all_urls>",
	"nativeMessaging",
	"downloads",
	"geolocation",
	"notifications",
	"tabs",
	"activeTab",
	"storage",
	"unlimitedStorage",
	"history"
  ],
  "background": {
	"scripts": ["background/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
	"browser_style": true,
    //"default_popup": "record.html",
	"default_title": "HLS"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]

}